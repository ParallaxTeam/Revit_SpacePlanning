<UserControl x:Class="LMN.Revit.SpacePlanning.ParamSettingCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LMN.Revit.SpacePlanning"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="180">
    <Grid>
        <Label Name="headerLabel" Content="Header" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0" FontFamily="Arial" FontWeight="Black" FontSize="14"/>
        <ComboBox Name="paramComboBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,0,10,10" SelectionChanged="paramComboBox_SelectionChanged"/>
    </Grid>
</UserControl>
