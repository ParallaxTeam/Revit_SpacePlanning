<UserControl x:Class="LMN.Revit.SpacePlanning.MaterialSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LMN.Revit.SpacePlanning"
             mc:Ignorable="d" 
             Height="55" Width="210">
    <Grid>
        <Border BorderThickness="1" BorderBrush="#FFB4B4B4"/>
        <Label Name="deptNameLabel" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="12" FontWeight="Bold" Margin="20,-2,0,0" RenderTransformOrigin="1.422,0.31"/>
        <ComboBox Name="matComboBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="25,23,5,0" SelectionChanged="matComboBox_SelectionChanged" ItemsSource="{Binding}"/>
        <Rectangle Name="colorBox" Fill="#FFF4F4F5" HorizontalAlignment="Left" Margin="0,0,0,0" Stroke="Black" VerticalAlignment="Stretch" Width="20"/>
    </Grid>
</UserControl>
